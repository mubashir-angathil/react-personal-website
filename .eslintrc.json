{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "standard-with-typescript"
  ],
  "overrides": [
    {
      "files": [
        "webpack.config.js"
      ],
      "parserOptions": {
        "project": null // Exclude from TypeScript linting
      }
    }
  ],
  "ignorePatterns": ["*.scss"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "tsconfig.json"
  },
  "plugins": [
    "react",
    "jest"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {}
}